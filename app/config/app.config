# Note - Only $HOME and ~ are expanded. All other env symbols are translated literally.

# Reserved, placeholder for App Home directory
app_key=ptekwpdev

# APP_BASE constant
app_base=$HOME/projects/ptekwpdev

# CONFIG_BASE constant
config_base=$HOME/.ptekwpdev

# PROJECT_BASE Constant
project_base=$HOME/ptekwpdev_repo

# ENV var in compose.app.yml and compose.project.yml
backend_network=ptekwpdev_backend

# Secrets passed to docker files via .env
secrets.sqldb_root=root
secrets.sqldb_root_pass=v67ZOe7boEA7WjMglVCDsOkDoZgV1Nrj

# SQLDB Container defaults
database.sqldb_port=3306
database.sqldb_image=mariadb
database.sqldb_version=10.5
database.sqladmin_image=phpmyadmin/phpmyadmin
database.sqladmin_version=latest
database.sqladmin_port=5211

# Assets Container Docker defaults
assets.container=ptekwpdev_assets
assets.root_path=/usr/src/ptekwpdev/assets
assets.volume_name=ptekwpdev_assets_vol

# Default Wordpress Docker Image defaults unless overriden by project 
wordpress_defaults.image=wordpress:latest
wordpress_defaults.php_version=8.2
wordpress_defaults.port=8080
wordpress_defaults.ssl_port=8443